{
    "name": "tenkoma/github-styoel-authentication-token",
    "type": "library",
    "license": "MIT License",
    "autoload": {
        "psr-4": {
            "Tenkoma\\GithubStyleAuthenticationToken\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tenkoma\\GithubStyleAuthenticationToken\\Test\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Koji Tanaka",
            "email": "tenkoma@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "tuupola/base62": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.4",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "analyse": "phpstan analyse -c phpstan.neon",
        "lint": "phpcs -p --standard=./ruleset.xml --encoding=utf-8 .",
        "lintfix": "phpcbf -p --standard=./ruleset.xml --encoding=utf-8 ."
    }
}
